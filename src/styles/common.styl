.app-title
  font-size 54px
  font-weight 900
  color #414141
  margin-top 15px
  line-height 1.19
  margin-bottom 30px
  text-align left

.link
  font-size 16px
  line-height 1.5%
  color #009cde
  text-decoration none

  &:hover
    color #67bcff

// gaps
.mrg-r-30
  margin-right 30px
.mrg-t-50
  margin-top 50px

.pd-t-25
  padding-top 25px

.value
  color #768692
  font-size 16px
  font-weight normal
  text-align right

.btn-primary
  width 100%
  height 48px
  font-size 16px
  font-weight bold
  text-transform uppercase
  letter-spacing 0.8px
  min-width 165px
  color #fff
  background-color #009cde
  border 1px solid transparent
  border-radius 4px
  padding 6px 12px
  margin-bottom 0

  &:focus
    background-color #286090
    outline 0
    border-color #122b40

.btn-reserve
  border 2px solid #b7c9d3
  width 100%
  background white
  font-size 16px
  font-weight bold
  text-transform uppercase
  letter-spacing 0.8px
  border-radius 4px
  height 48px
  color #b7c9d3

  &:hover
    background-color #f9f9f9

  &:focus
    background-color #286090
    outline 0
    border-color #122b40

// error colors
.error-msg
  color #f7584c
  font-size 18px