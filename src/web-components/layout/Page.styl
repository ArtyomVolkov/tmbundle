.app-content
  header
    width: 100%
    color white
    position fixed
    display flex
    justify-content flex-start
    height 45px
    padding-left 15px
    margin 0
    background-color #279CDC
    border-bottom 1px solid #6cccff
    z-index 99999

  main
    padding 45px 0
    display flex
    height 100%
    max-width 1140px
    flex-direction column
    margin 0 auto

  footer
    position fixed
    width: 100%
    display flex
    justify-content center
    bottom 0
    height 45px
    background-color #f1f1f1
    border-top 1px solid #c1c0c0