.search-bar
  margin 50px 0

  .search-row
    display flex
    margin-bottom 40px

    .input-search
      flex 0.9
      display flex
      margin-right 30px
      input
        width 100%
        height 30px
        padding 8px 12px
        border-radius 4px
        border solid 1px rgba(122, 136, 148, 0.7)

        &:focus
          border-color #66afe9
          outline 0
          box-shadow inset 0 1px 1px rgba(0,0,0,.075), 0 0 8px rgba(102,175,233,.6)

    .search-btn
      display flex
      flex 0.1

.row
  flex-direction row
  align-self stretch
  padding 10px
  border-bottom 1px solid #dcdcdc